<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.homepage.SearchFragment"
    android:background="@color/Tan"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Gold"
        app:cardElevation="14sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10sp">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:backgroundTint="@color/Gold"
                android:elevation="8dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/Theme.MaterialComponents"
                    app:defaultQueryHint="Search News"
                    app:iconifiedByDefault="false"
                    android:background="@color/Gold"

                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scrollbarStyle="outsideOverlay"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/Gold2"
                    android:elevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:backgroundTint="#00000000"
                                android:layout_marginEnd="10dp"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/business"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:layout_marginBottom="10dp"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:id="@+id/businessTopic"
                                        style="@style/Theme.MaterialComponents"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="20dp"
                                        android:src="@drawable/dollar"
                                        android:contentDescription="@string/businessLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/science"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:id="@+id/scienceTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="5dp"
                                        android:src="@drawable/atom"
                                        android:contentDescription="@string/scienceLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/entertainment"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/entertainmentTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/camera"
                                        android:padding="25dp"
                                        android:contentDescription="@string/entertainmentLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/health"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/healthTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/cross"
                                        android:padding="20dp"
                                        android:contentDescription="@string/healthLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sports"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/sportTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/sport"
                                        android:padding="20dp"
                                        android:contentDescription="@string/sportLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/technology"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/technologyTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/tech"
                                        android:padding="25dp"
                                        android:contentDescription="@string/technologyLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="10dp"
                                android:backgroundTint="#00000000"
                                app:cardElevation="1dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0sp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/general"
                                        android:textColor="@color/Charcoal"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/generalTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/earth"
                                        android:padding="25dp"
                                        android:contentDescription="@string/generalLogo" />

                                </FrameLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gold"
                android:layout_margin="15dp"
                android:elevation="6dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:elevation="8dp">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateOnly="true"
                android:indeterminateTint="@color/Charcoal"
                android:outlineAmbientShadowColor="@color/Charcoal"
                android:visibility="gone"
                android:layout_marginTop="100sp"
                android:elevation="14dp"/>

            <TextView
                android:id="@+id/hintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_a_topic_or_make_a_request"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:textStyle="bold"
                android:textColor="@color/Charcoal"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iconInternetError"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/ooops"
                android:visibility="gone"
                android:contentDescription="@string/errorImage" />
            <ImageView
                android:id="@+id/waitForInputImage"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/search_news"
                android:layout_marginTop="30dp"
                android:visibility="visible"
                android:contentDescription="@string/searchImage" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>